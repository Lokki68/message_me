<%= link_to 'Chatroom', root_path, class: 'item' %>
<a class="item">Messages</a>
<div class="right menu">
  <% if logged_in? %>
    <%= link_to 'Log out', logout_path, class: 'item', data: { turbo_method: :delete } %>
  <% else %>
    <%= link_to 'Log in', login_path, class: 'item' %>
  <% end %>

  <% unless logged_in? %>
    <div class="item">
      <%= link_to 'Log in', login_path, class: 'ui primary button' %>
    </div>
  <% end %>
</div>